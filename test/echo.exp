#!/usr/bin/env expect-f.sh

set timeout 2

spawn aicli

expect {
    ">>> " {
        send "/echo Hello, World!\r"
    }
    timeout {
        puts "Error: Did not receive prompt"
        exit 1
    }
}

expect {
    "Hello, World!" {
        send "/exit\r"
    }
    timeout {
        puts "Error: Did not receive expected output"
        exit 1
    }
}

expect eof
exit 0
