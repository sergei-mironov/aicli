#!/usr/bin/env expect-f.sh

set timeout 2

spawn aicli

expect {
    ">>> " {
        send "/echo Hello, World!\r"
    }
    timeout {
        puts "Error: Did not receive prompt"
        exit 1
    }
}

expect {
    -re {Hello\,\ World\!\r?\n>>>} {
        send "/echo AAA/echo BBB\r"
    }
    timeout {
        puts "Error: Did not receive expected input"
        exit 1
    }
}

expect {
    -re {AAA\r?\nBBB\r?\n>>>} {
        send "/exit\r"
    }
    timeout {
        puts "Error: Did not receive prompt"
        exit 1
    }
}

expect eof
exit 0
